@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}

@section Styles {
    @*<style>
        .dataTables_wrapper label,
        .dataTables_wrapper input,
        .dataTables_info,
        .dataTables_paginate {
            color: aliceblue !important;
        }
    </style>*@
}

<partial name="_Notification" />

<div class="container py-3 mt-3">
    <div class="row">
        <div class="col-6 px-0">
            <h3 class="text-warning">List of the products</h3>
        </div>
        <div class="col-6 px-0 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-warning">
                <i class="bg-warning bi-plus-circle"></i> &nbsp;
                Add New Product
            </a>
        </div>
    </div>
</div>

<table id="productsTable" class="table table-bordered table-striped text-white-50" style="width: 100%">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                ISBN
            </th>
            <th>
                Price
            </th>
            <th>
                Author
            </th>
            <th>
                Category
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
</table>

@section Scripts {
    <script src="~/js/product.js"></script>
}
