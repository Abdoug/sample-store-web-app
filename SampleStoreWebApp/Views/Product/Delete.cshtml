@model Product
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <input name="id" value="@Model.Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" value="@Model.Name" disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="Qty"></label>
            <input asp-for="Qty" class="form-control" value="@Model.Qty" disabled/>
        </div>
        <div class="justify-content-end text-end">
            <button type="submit" class="btn btn-primary" style="width: 150px">Delete</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-danger" style="width: 150px">Back Home</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}