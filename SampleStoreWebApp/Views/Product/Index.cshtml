@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}

<partial name="_Notification" />

<div class="container py-3 mt-3">
    <div class="row">
        <div class="col-6 px-0">
            <h3 class="text-warning">List of the products</h3>
        </div>
        <div class="col-6 px-0 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-warning">
                <i class="bg-warning bi-plus-circle"></i> &nbsp;
                Add New Product
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Product Qty
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model) {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.Qty
                </td>
                <td>
                    <div class="w-150 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id">
                            <i class="bg-info bi-pencil-square"></i>&nbsp;Edit
                        </a>
                        <a class="btn btn-danger mx-2" asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id">
                            <i class="bg-danger bi-trash-fill"></i>&nbsp;Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
